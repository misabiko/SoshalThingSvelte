{
	"root": true,
    "env": {
        "browser": true,
        "es2021": true,
		"webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
		"plugin:svelte/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
		"extraFileExtensions": [".svelte"]
    },
	"overrides": [{
		"files": ["*.svelte"],
		"parser": "svelte-eslint-parser",
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		}
	}],
    "plugins": [
        "@typescript-eslint",
		"@stylistic"
    ],
    "rules": {
		//Wish I could disable semicolon for class member fields
        "@stylistic/semi": ["error", "always"],
		"@stylistic/member-delimiter-style": [
			"warn",
			{
				"multiline": {
					"delimiter": "none",
					"requireLast": true
				},
				"singleline": {
					"delimiter": "semi",
					"requireLast": true
				}
			}
		],
        "@stylistic/quotes": [
			"warn",
			"single",
			{
				"avoidEscape": true
			}
		],
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-unused-vars": [
			"warn",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_"
			}
		]
    },
	"ignorePatterns": ["**/dist*/*", "**/node_modules/*"]
}
