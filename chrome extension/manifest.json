{
	"name": "SoshalThing Svelte",
	"manifest_version": 3,
	"version": "0.1",
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "ruleset_1",
				"enabled": true,
				"path": "rule.json"
			}
		]
	},
	"permissions": [
		"declarativeNetRequest",
		"declarativeNetRequestFeedback"
	],
	"host_permissions": [
		"*://*/*"
	],
	"externally_connectable": {
		"matches": [
			"*://localhost/*",
			"*://soshalthing.surge.sh/*",
			"*://soshalthing.com/*"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.pixiv.net/*/users/*"
			],
			"js": ["dist/pixiv/userPage/entry.js"],
			"css": ["dist/pixiv/userPage/entry.css"]
		},
		{
			"matches": [
				"https://*.pixiv.net/bookmark_new_illust.php*",
				"https://*.pixiv.net/bookmark_new_illust_r18.php*"
			],
			"js": ["dist/pixiv/followIllusts/entry.js"],
			"css": ["dist/pixiv/followIllusts/entry.css"]
		},
		{
			"matches": [
				"https://*.twitter.com/home",
				"https://*.x.com/home"
			],
			"js": ["dist/twitter/homePage/entry.js"],
			"css": ["dist/twitter/homePage/entry.css"]
		},
		{
			"matches": [
				"https://*.twitter.com/*",
				"https://*.x.com/*"
			],
			"exclude_matches": [
				"https://*.twitter.com/home",
				"https://*.x.com/home",
				"https://*.twitter.com/*/status*",
				"https://*.x.com/*/status*"
			],
			"js": ["dist/twitter/userPage/entry.js"],
			"css": ["dist/twitter/userPage/entry.css"]
		}
	]
}