{
	"name": "SoshalThing Svelte",
	"manifest_version": 3,
	"version": "0.1",
	"background": {
		"service_worker": "dist/background.js",
		"type": "module"
	},
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "ruleset_1",
				"enabled": true,
				"path": "rule.json"
			}
		]
	},
	"permissions": [
		"declarativeNetRequest",
		"declarativeNetRequestFeedback"
	],
	"host_permissions": [
		"*://*/*"
	],
	"externally_connectable": {
		"matches": [
			"*://localhost/*",
			"*://soshalthing.surge.sh/*",
			"*://soshalthing.com/*"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.pixiv.net/*/users/*"
			],
			"js": ["dist/pixiv/userPage/entry.js"],
			"css": ["dist/pixiv/userPage/entry.css"]
		},
		{
			"matches": [
				"https://*.pixiv.net/bookmark_new_illust.php*",
				"https://*.pixiv.net/bookmark_new_illust_r18.php*"
			],
			"js": ["dist/pixiv/followIllusts/entry.js"],
			"css": ["dist/pixiv/followIllusts/entry.css"]
		}
	]
}