{
	"name": "soshalthing-svelte",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bun scripts/buildscript.ts",
		"serve": "bun scripts/staticServer.ts",
		"build:extension": "bun scripts/extensionbuildscript.ts",
		"build:unit": "bun scripts/testbuildscript.ts",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:unit": "bun build:unit && playwright test -c playwright.config.unit.ts",
		"test": "bun test:e2e && bun test:unit",
		"serve:test": "bun run build --entry ../tests/e2e/entry.ts && bun serve --port 8089",
		"check": "tsc --noEmit && svelte-check && eslint .",
		"clean": "rm -rf dist dist-test test-results extension/dist"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"@html-eslint/eslint-plugin": "^0.27.0",
		"@html-eslint/parser": "^0.27.0",
		"@playwright/test": "^1.48.2",
		"@stylistic/eslint-plugin": "^2.10.1",
		"@tsconfig/svelte": "^5.0.4",
		"@types/chrome": "^0.0.280",
		"@types/express": "^5.0.0",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"esbuild-plugin-import-glob": "^0.1.1",
		"eslint": "^9.14.0",
		"eslint-plugin-svelte": "^2.46.0",
		"fast-glob": "^3.3.2",
		"globals": "^15.12.0",
		"svelte": "^5.1.13",
		"svelte-check": "^4.0.6",
		"svelte-eslint-parser": "^0.43.0",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0"
	},
	"dependencies": {
		"@atproto/api": "^0.13.15",
		"@fortawesome/fontawesome-free": "^6.6.0",
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-regular-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@types/bun": "^1.1.13",
		"esbuild": "^0.24.0",
		"esbuild-svelte": "^0.8.2",
		"http-server": "^14.1.1",
		"mfm-js": "^0.24.0",
		"misskey-js": "^2024.10.2-alpha.2",
		"svelte-fa": "^4.0.3"
	}
}
