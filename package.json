{
	"name": "soshalthing-svelte",
	"private": true,
	"scripts": {
		"build": "bun run scripts/buildscript.ts",
		"serve:static": "bun run scripts/staticServer.ts ./cookies.json",
		"serve": "bun run scripts/buildscript.ts && bun --watch run serve:static",
		"build:extension": "bun run scripts/extensionbuildscript.ts",
		"build:unit": "bun run scripts/testbuildscript.ts",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:unit": "bun run build:unit && playwright test -c playwright.config.unit.ts",
		"test": "bun run test:e2e && bun run test:unit",
		"lint": "eslint ."
	},
	"type": "module",
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@tsconfig/svelte": "^5.0.2",
		"@types/chrome": "^0.0.251",
		"@types/express": "^4.17.21",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"bun-types": "^1.0.12",
		"eslint": "^8.53.0",
		"svelte": "^4.2.3",
		"svelte-preprocess": "^5.1.0",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^6.2.1",
		"@fortawesome/free-brands-svg-icons": "^6.2.1",
		"@fortawesome/free-regular-svg-icons": "^6.2.1",
		"@fortawesome/free-solid-svg-icons": "^6.2.1",
		"crypto-js": "^4.2.0",
		"esbuild": "^0.19.5",
		"esbuild-svelte": "^0.8.0",
		"express": "^4.18.2",
		"http-server": "^14.1.1",
		"mfm-js": "^0.23.3",
		"misskey-js": "^0.0.16",
		"oauth-1.0a": "^2.2.6",
		"puppeteer": "^21.5.1",
		"resolve-glob": "^1.0.0",
		"svelte-fa": "^3.0.2",
		"ws": "^8.14.2"
	}
}