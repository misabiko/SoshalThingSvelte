{
  "name": "soshalthing-svelte",
  "private": true,
  "scripts": {
    "build": "node buildscript.js",
    "serve": "node buildscript.js --serve",
    "serve:static": "node src/staticServer.js",
    "build:extension": "node extensionbuildscript.js",
    "build:unit": "node testbuildscript.js",
    "test": "npm run build:unit && playwright test",
    "test:headed": "playwright test --headed",
    "check": "svelte-check --tsconfig tsconfig.json --fail-on-warnings  --fail-on-hints",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --fail-on-warnings  --fail-on-hints --watch"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chrome": "^0.0.203",
    "@types/express": "^4.17.13",
    "esbuild-postcss": "^0.0.4",
    "esbuild-sass-plugin": "^2.4.3",
    "node-sass": "^8.0.0",
    "svelte": "^3.54.0",
    "svelte-check": "^2.10.2",
    "svelte-preprocess": "^5.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "bulma": "^0.9.4",
    "crypto-js": "^4.1.1",
    "esbuild": "^0.16.4",
    "esbuild-svelte": "^0.7.3",
    "express": "^4.18.2",
    "http-server": "^14.1.1",
    "oauth-1.0a": "^2.2.6",
    "svelma": "github:misabiko/svelma",
    "svelte-fa": "^3.0.2"
  }
}
